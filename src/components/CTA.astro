---
import type { Lang } from '../i18n';
import { t } from '../i18n';

interface Props {
  lang?: Lang;
}

const { lang = 'en' } = Astro.props;
const i = t(lang);
---
<div class="cta">
  <div>
    <h2>{i.cta.title}</h2>
    <p>{i.cta.description}</p>
  </div>
  <a href={`/${lang}/contact/`} class="btn">{i.cta.button}</a>
</div>
