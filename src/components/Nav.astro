---
const base = import.meta.env.BASE_URL;
const links = [
  { href: `${base}`, label: 'Home' },
  { href: `${base}ai/`, label: 'AI Consulting' },
  { href: `${base}sdn/`, label: 'SDN' },
  { href: `${base}ecommerce/`, label: 'eCommerce' },
  { href: `${base}blog/`, label: 'Blog' },
  { href: `${base}openclaw/`, label: 'OpenClaw' },
  { href: `${base}contact/`, label: 'Contact' },
];
---
<nav>
  <div class="container">
    <a href={base} class="logo">Virge.io</a>
    <button class="menu-toggle" aria-label="Menu" onclick="document.querySelector('.links').classList.toggle('open')">â˜°</button>
    <ul class="links">
      {links.map(l => <li><a href={l.href}>{l.label}</a></li>)}
    </ul>
  </div>
</nav>
