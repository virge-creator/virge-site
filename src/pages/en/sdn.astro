---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';
import { t } from '../../i18n';

const lang = 'en';
const i = t(lang);
---
<Layout title="Software Defined Networking" description={i.sdn.metaDesc} lang={lang}>
  <div class="page-header">
    <h1><Fragment set:html={i.sdn.title} /></h1>
    <p>{i.sdn.description}</p>
  </div>

  <section>
    <div class="container">
      <div class="features">
        <div class="feature">
          <h3>{i.sdn.wfoTitle}</h3>
          <p><Fragment set:html={i.sdn.wfoDesc} /></p>
        </div>
        <div class="feature">
          <h3>{i.sdn.enterpriseTitle}</h3>
          <p>{i.sdn.enterpriseDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.sdn.modelingTitle}</h3>
          <p>{i.sdn.modelingDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.sdn.integrationsTitle}</h3>
          <p>{i.sdn.integrationsDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.sdn.iacTitle}</h3>
          <p>{i.sdn.iacDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.sdn.trainingTitle}</h3>
          <p>{i.sdn.trainingDesc}</p>
        </div>
      </div>
    </div>
  </section>

  <div class="container"><CTA lang={lang} /></div>
</Layout>
