---
import Layout from '../../layouts/Layout.astro';
import CTA from '../../components/CTA.astro';
import { t } from '../../i18n';

const lang = 'nl';
const i = t(lang);
---
<Layout title="OpenClaw Consultancy" description={i.openclaw.metaDesc} lang={lang}>
  <div class="page-header">
    <h1><Fragment set:html={i.openclaw.title} /></h1>
    <p>{i.openclaw.description}</p>
  </div>

  <section>
    <div class="container">
      <div class="features">
        <div class="feature">
          <h3>{i.openclaw.deployTitle}</h3>
          <p>{i.openclaw.deployDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.openclaw.hostingTitle}</h3>
          <p>{i.openclaw.hostingDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.openclaw.securityTitle}</h3>
          <p>{i.openclaw.securityDesc}</p>
        </div>
        <div class="feature">
          <h3>{i.openclaw.automationTitle}</h3>
          <p>{i.openclaw.automationDesc}</p>
        </div>
      </div>

      <div class="highlight" style="margin-top:3rem;padding:2rem;border-radius:12px;background:rgba(139,92,246,0.1);border:1px solid rgba(139,92,246,0.2);">
        <h3 style="margin-top:0;">{i.openclaw.whatIsTitle}</h3>
        <p style="margin-bottom:0;">{i.openclaw.whatIsDesc}</p>
      </div>
    </div>
  </section>

  <div class="container"><CTA lang={lang} /></div>
</Layout>
